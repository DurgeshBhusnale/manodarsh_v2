# Environment Configuration for CRPF Mental Health Monitoring System
# Copy this file to .env and update the values as needed

# Database Configuration
DB_NAME=crpf_mental_health
DB_USER=root
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# Server Configuration
BACKEND_PORT=5000
FRONTEND_URL=http://localhost:3000
DEBUG_MODE=True

# Security Configuration
SESSION_TIMEOUT=900
MAX_LOGIN_ATTEMPTS=3
PASSWORD_MIN_LENGTH=8

# Mental Health Scoring Configuration
NLP_WEIGHT=0.7
EMOTION_WEIGHT=0.3

# Risk Level Thresholds (0.0 to 1.0)
RISK_LOW_THRESHOLD=0.3
RISK_MEDIUM_THRESHOLD=0.5
RISK_HIGH_THRESHOLD=0.7
RISK_CRITICAL_THRESHOLD=0.85

# Camera and Emotion Detection
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=10
DETECTION_INTERVAL=30

# Notification Configuration
EMAIL_ENABLED=False
SMS_ENABLED=False
ALERT_COOLDOWN=3600

# Pagination and Performance
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
CACHE_TTL=300

# Survey Configuration
MAX_SURVEY_TIME=1800
AUTO_SAVE_INTERVAL=30

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# Translation Configuration
TRANSLATION_API_KEY=your_translation_api_key
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi
